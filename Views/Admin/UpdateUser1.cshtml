
@model List<FilmKurdu.Models.Users>

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">
<head>
    <title>Güncelle</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width" />
</head>
<body class="bg-gray-800 font-sans leading-normal tracking-normal mt-12">

    <div class="m-5">
        <p style="font-size: 24px; font-weight: bold">Hoşgeldin! <br> İşlem: Kullanıcı Listeleri </p>
    </div>

    <div class="p-5">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">İşlem</th>
                    <th scope="col">id</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("Güncelle", "UpdateUser2", "Admin", new { userId = user.ID }, new { @class = "btn btn-dark" })
                        </td>
                        <td>@user.ID</td>
                        <td>@user.Username</td>
                        <td>@user.Mail</td>
                        <td>@user.Password</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>
