@model FilmKurdu.Models.Users


<!DOCTYPE html>
<html>
<head>
    <title>Admin Sayfası</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width" />
</head>
<body class="bg-gray-800 font-sans leading-normal tracking-normal mt-12">

    <div class="m-5">
        <p style="font-size: 24px; font-weight: bold">Hoşgeldin!</p>
        <p style="font-size: 24px; font-weight: bold">İşlem: Değiştir </p>
    </div>

    <div class="p-5">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Kullanıcı Adı</td>
                    <td>E-Mail</td>
                    <td>Parola</td>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.ID</td>
                    <td>@Model.Username</td>
                    <td>@Model.Mail</td>
                    <td>@Model.Password</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="p-5 m-2 w-25" style="background-color: #9DB2BF; border-radius: 10px;">

        @using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.ID)
                @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ID)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Mail)
                @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Mail)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <input type="submit" value="Update" class="btn btn-primary mt-2" />
        }
        <div>

        </div>
    </div>
</body>
</html>
