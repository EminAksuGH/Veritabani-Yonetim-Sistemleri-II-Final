@model FilmKurdu.Models.Users

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="../../css/signinupstyle.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <div class="login-container">
        <div class="left-section">
            <div class="overlay">
                <a href="@Url.Action("HomePage", "Home")" class="title" style="text-decoration: none">
                    <h1>Film *</h1>
                    <h2>Kurdu</h2>
                </a>
            </div>
        </div>
        <div class="right-section">
            <div class="sign">
                <p>Sign Up</p>
            </div>
            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                if (ViewBag.Message != null)
                {
                    <div class="text-danger">
                        @ViewBag.Message
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Mail)
                    @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Mail)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="form-group">
                    @Html.Label("Confirm Password")
                    @Html.Password("ConfirmPassword", null, new { @class = "form-control" })
                    @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
                </div>

                <p>Already have an account? @Html.ActionLink("Sign In", "Login", "Home", null, new { @class = "customLink" })</p>

                <div class="form-group">
                    <input type="submit" value="Sign Up" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
