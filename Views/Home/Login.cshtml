@model FilmKurdu.Models.Users

<!DOCTYPE html>

<html lang="tr">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="../../css/signinupstyle.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <div class="login-container">
        <div class="left-section">
            <div class="overlay">
                <a href="@Url.Action("HomePage", "Home")" class="title" style="text-decoration: none">
                    <h1>Film *</h1>
                    <h2>Kurdu</h2>
                </a>
            </div>
        </div>
        <div class="right-section">
            <div class="sign">
                <p>Sign In</p>
            </div>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                if (ViewBag.Message != null)
                    {
                        <div class="text-muted">
                            @ViewBag.Message
                        </div>
                    }

                <div class="form-group">
                    @Html.Label("Username or Email")
                    @Html.TextBox("usernameOrEmail", null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <p>Don't you have an account yet? @Html.ActionLink("Sign Up", "Register", "Home", null, new { @class="customLink" })</p>
                <div class="form-group">
                    <input type="submit" value="Login" />
                </div>
            }
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
